generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   @default(USER)
}

model Resident {
  owner String @unique
  Room  Int
  Floor Int
}

model Profile {
  id      Int    @id @default(autoincrement())
  name    String
  image   String
  classes String
  aboutme String
  grade   Grade
  owner   String
}

model Post {
  id         Int       @id @default(autoincrement())
  content    String
  owner      String
  chatID     Int
  chatRoomId Int?
  Chatroom   Chatroom? @relation(fields: [chatRoomId], references: [id])
}

model Chatroom {
  id      Int      @id  @default(autoincrement())
  owner   String
  name    String
  members String[]
  type    String
  posts   Post[]
}

model Event {
  id    Int @id @default(autoincrement())
  name  String
  description String
  location String
  month String
  day   Int
  year  Int
  host  String
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition @default(good)
  owner     String
}

enum Role {
  USER
  ADMIN
}

enum Grade {
  freshman
  sophomore
  junior
  senior
}

enum Condition {
  excellent
  good
  fair
  poor
}
